<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3"> Your Pragmatic Cart </h2>
  <ul class="list-disc list-inside">
    <% cart.line_items.each do |item| %>
      <li> <%= item.quantity %> &items; <%= item.product.title %> </li>
    <% end %>
  </ul>
</div>

<h2>
<%= button_to 'Empty Cart', cart, method: :delete, class: 'bg-red-500' %>
</h2>
